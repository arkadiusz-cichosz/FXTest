<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainViewController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#eventHandlerButton" text="Start" />
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#eventHandlerButton" text="Stop" />
         </children>
      </HBox>
   </bottom>
   <top>
      <Label fx:id="headerLabel" alignment="CENTER" contentDisplay="CENTER" text="Label" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <AnchorPane fx:id="container" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
